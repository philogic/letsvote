<div class="poll-form">
  <h2>New Poll</h2>

  <%= form_for @poll, poll_path(@conn, :create), fn f -> %>
    <label>
      Question:<br/>
      <%= text_input f, :question %>
    </label>
    <br />
    <label>
      Options:<br />
      <input type="text" name="options">
    </label>
    <br />
    <%= submit "Add Poll" %>
  <% end %>
</div>